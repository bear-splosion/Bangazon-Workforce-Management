@model Bangazon_Workforce_Management.Models.ViewModels.EmployeeTrainingProgramViewModel

@{
    ViewData["Title"] = "Index";
}

<h2>Training Programs</h2>


<form asp-action="Assign">
    <div class="row">
        <div class="col-md-4">

            <div class="form-group">
                <label asp-for="TrainingProgram" class="control-label"></label>
                <select asp-for="TrainingProgramId" asp-items="@Model.TrainingPrograms" class="form-control"></select>
                <span asp-validation-for="TrainingProgramId" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <input type="submit" value="Assign" class="btn btn-default" />
        </div>
    </div>
</form>

<p>
    <a asp-action="Index" asp-route-Past="true">View Past Dates</a>
    <a asp-action="Index">Upcoming Dates</a>
</p>
